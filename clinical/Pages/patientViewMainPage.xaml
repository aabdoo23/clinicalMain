<Page x:Class="clinical.Pages.patientViewMainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:clinical.Pages" xmlns:Icon="http://metro.mahapps.com/winfx/xaml/iconpacks" xmlns:lvc="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf"
      mc:Ignorable="d" 
      d:DesignHeight="768" d:DesignWidth="1360"
      Title="patientViewMainPage">
    <Border CornerRadius="0 0 10 10 " Grid.Row="1" Background="{StaticResource lightFontColor}">


        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="25*"/>
                <ColumnDefinition Width="75*"/>
                <!--<ColumnDefinition Width="Auto"/>-->
            </Grid.ColumnDefinitions>

            <!--Side Panel-->
            <Grid Grid.Column="0" Grid.Row="0" Grid.RowSpan="2">
                <Grid.RowDefinitions>
                    <RowDefinition Height="40*"/>
                    <RowDefinition Height="30*"/>
                    <RowDefinition Height="30*"/>


                </Grid.RowDefinitions>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="35*"/>
                    <ColumnDefinition Width="65*"/>
                </Grid.ColumnDefinitions>

                <!--Personal info-->
                <Border Background="{StaticResource darkerColor}" BorderThickness="2" CornerRadius="10" Margin="10 10 10 5 " Grid.Row="0" Grid.ColumnSpan="2">
                    <Grid Margin="10">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="40"/>
                            <RowDefinition Height="1*"/>

                        </Grid.RowDefinitions>

                        <Grid Grid.Row="0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="90*"/>
                                <ColumnDefinition Width="15*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="Personal Information" FontSize="22" FontWeight="Bold" Foreground="{StaticResource lightFontColor}"  Grid.Column="0"/>
                            <Icon:PackIconMaterial Kind="AccountEdit" Foreground="{StaticResource lightFontColor}" Grid.Column="1" HorizontalAlignment="Center" Width="25" Height="26" Margin="0,4,0,0" MouseDown="editPersonalInfo"/>
                        </Grid>
                        <Border Background="{StaticResource lightFontColor}" CornerRadius="5" Grid.Row="1">
                            <Grid Margin="5">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="1*"/>
                                    <RowDefinition Height="1*"/>
                                    <RowDefinition Height="1*"/>
                                    <RowDefinition Height="1*"/>
                                    <RowDefinition Height="1*"/>
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="100"/>
                                    <ColumnDefinition Width="1*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="ID:" Foreground="{StaticResource darkerColor}" FontSize="20" Grid.Row="0" Margin="5" FontWeight="Bold"/>
                                <TextBlock Name="patientIDTxt" Text="123ID" Grid.Column="1" Foreground="{StaticResource darkerColor}" FontSize="20" Grid.Row="0" Margin="2" TextWrapping="Wrap"/>
                                <TextBlock Text="Age:" Foreground="{StaticResource darkerColor}" FontSize="20" Grid.Row="3" Margin="5" FontWeight="Bold"/>
                                <TextBlock Name="ageTxt" Text="25" Foreground="{StaticResource darkerColor}" FontSize="25" Grid.Row="3" Grid.Column="1" Margin="2" TextWrapping="Wrap"/>
                                <TextBlock Text="Name:" Foreground="{StaticResource darkerColor}" TextWrapping="Wrap" FontSize="20" Grid.Row="1" Margin="5" FontWeight="Bold"/>
                                <TextBlock Name="patientNameTxt" Grid.Column="1" Text="Ali M'l" Foreground="{StaticResource darkerColor}" FontSize="24" Grid.Row="1" Margin="2" TextWrapping="Wrap"/>

                                <TextBlock Text="Contact info:" Foreground="{StaticResource darkerColor}" TextWrapping="WrapWithOverflow" FontSize="14" Grid.Row="2" Margin="5" FontWeight="Bold"/>
                                <TextBlock Name="contactInfoTxt" Grid.Column="1" Text="+201007123123" Foreground="{StaticResource darkerColor}" FontSize="20" Grid.Row="2" Margin="2" TextWrapping="Wrap"/>

                                <TextBlock Text="Referring:" Foreground="{StaticResource darkerColor}" TextWrapping="WrapWithOverflow" FontSize="19" Grid.Row="4" Margin="5" FontWeight="Bold"/>
                                <TextBlock Name="referringTxt" Grid.Column="1" Text="Dr. Ibrahim" Foreground="{StaticResource darkerColor}" FontSize="20" Grid.Row="4" Margin="5" TextWrapping="Wrap"/>

                            </Grid>
                        </Border>
                    </Grid>
                </Border>
                <!--Allergies-->
                <Border Background="{StaticResource darkerColor}" BorderThickness="2" CornerRadius="10" Margin="10 5 10 5 " Grid.Row="1" Grid.ColumnSpan="2">
                    <Grid Margin="10">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="40"/>
                            <RowDefinition Height="1*"/>

                        </Grid.RowDefinitions>
                        <Grid Grid.Row="0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="90*"/>
                                <ColumnDefinition Width="15*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="Chronical diseases" FontSize="22" FontWeight="Bold" Foreground="{StaticResource lightFontColor}"  Grid.Column="0"/>
                            <Icon:PackIconMaterial MouseDown="newMedicalRecord" Kind="PlusBox" Foreground="{StaticResource lightFontColor}" Grid.Column="1" HorizontalAlignment="Center" Width="25" Height="26" Margin="0,4,0,0"/>
                        </Grid>
                        <Border Background="{StaticResource lightFontColor}" CornerRadius="5" Grid.Row="1">
                            <WrapPanel Margin="5">
                                <Border Background="Chocolate" MinWidth="100" MinHeight="50" CornerRadius="5" Margin="10 10 0 0">
                                    <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" Text="Diabetes" Style="{StaticResource titleText}"/>

                                </Border>
                                <Border Background="FloralWhite"  MinWidth="120" MinHeight="50" CornerRadius="5" Margin="10 10 0 0">
                                    <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" Text="notDiabetes" Style="{StaticResource titleText}"/>

                                </Border>
                                <Border Background="Cornsilk" MinWidth="140" MinHeight="50" CornerRadius="5" Margin="10 10 0 0">
                                    <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" Text="Blood Pressure" Style="{StaticResource titleText}"/>

                                </Border>
                            </WrapPanel>
                        </Border>
                    </Grid>
                </Border>
                <!--Previous Injuries-->
                <Border Background="{StaticResource darkerColor}" BorderThickness="2" CornerRadius="10" Margin="10 5 10 10 " Grid.Row="2" Grid.ColumnSpan="2">
                    <Grid Margin="10">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="40"/>
                            <RowDefinition Height="1*"/>

                        </Grid.RowDefinitions>
                        <Grid Grid.Row="0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="90*"/>
                                <ColumnDefinition Width="15*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="Previous Injuries" FontSize="24" FontWeight="Bold" Foreground="{StaticResource lightFontColor}"  Grid.Column="0"/>
                            <Icon:PackIconMaterial MouseDown="newMedicalRecord" Kind="PlusBox" Foreground="{StaticResource lightFontColor}" Grid.Column="1" HorizontalAlignment="Center" Width="25" Height="26" Margin="0,4,0,0"/>
                        </Grid>
                        
                        <Border Background="{StaticResource lightFontColor}" CornerRadius="5" Grid.Row="1">
                            <WrapPanel Margin="5">
                                <Border Background="LightPink"  MinWidth="100" MinHeight="50" CornerRadius="5" Margin="10 10 0 0">
                                    <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" Text="Ankle" Style="{StaticResource titleText}"/>

                                </Border>
                                <Border Background="FloralWhite"  MinWidth="120" MinHeight="50" CornerRadius="5" Margin="10 10 0 0">
                                    <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" Text="ACL" Style="{StaticResource titleText}"/>

                                </Border>
                                <Border Background="Cornsilk" MinWidth="140" MinHeight="50" CornerRadius="5" Margin="10 10 0 0">
                                    <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" Text="Dead inside?" Style="{StaticResource titleText}"/>

                                </Border>
                            </WrapPanel>
                        </Border>
                    </Grid>
                </Border>

            </Grid>

            <!--Main Section-->
            <Grid Grid.Column="1" Margin="5,20,0,0" Name="mainGrid">
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="60*"/>
                    <RowDefinition Height="40*"/>
                </Grid.RowDefinitions>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="60*"/>
                    <ColumnDefinition Width="40*"/>
                    <!--<ColumnDefinition Width="*"/>-->
                </Grid.ColumnDefinitions>

                <!--Title Section-->
                <StackPanel Margin="7 10 0 25">
                    <TextBlock Text="Patient Integrated View" Foreground="#797295" FontSize="13"/>
                    <TextBlock Name="patientNameMainTxt" Text="3alolo" Style="{StaticResource titleText}"/>
                </StackPanel>

                <!--Search Section-->
                <Grid Grid.Column="2" VerticalAlignment="Top" Margin="0,10,0,0" Height="45">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="auto"/>
                    </Grid.ColumnDefinitions>

                    <!--Search Textbox-->
                    <Grid>
                        <TextBlock Margin="40 0 0 0" VerticalAlignment="Center" Foreground="{StaticResource lightFontColor}"
                       IsHitTestVisible="False" Panel.ZIndex="1" Text="Search..."/>
                        <TextBox x:Name="txtSearch" Style="{StaticResource searchTextbox}"/>
                        <Icon:PackIconMaterial Kind="Magnify" Width="14" Height="14" Foreground="{StaticResource lightFontColor}" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="15 0 0 0"/>
                    </Grid>

                    <!--User Image-->
                    <Icon:PackIconMaterial Kind="Account" Grid.Column="1" Width="30" Height="30" Margin="15 0 15 0" Foreground="{StaticResource darkerColor}" HorizontalAlignment="Left" VerticalAlignment="Center"/>

                    
                </Grid>
                <!--previous visits-->
                <Border Grid.Column="1" Grid.Row="1" Style="{StaticResource theBorder}" Background="{StaticResource darkerColor}" >
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="15*"/>
                            <RowDefinition Height="90*"/>
                        </Grid.RowDefinitions>
                        <TextBlock Text="Previous visits" FontSize="20" Foreground="{StaticResource lightFontColor}" FontWeight="Bold" Margin="20 10" Grid.Row="0" Grid.Column="0"/>

                        <Border Grid.Column="1" Background="{StaticResource lighterColor}" Grid.Row="1" CornerRadius="10" Margin="10 0 10 10">
                            <DataGrid RowStyle="{DynamicResource DataGridRowStyle1}" ColumnHeaderStyle="{DynamicResource DataGridColumnHeaderStyle1}" CellStyle="{DynamicResource DataGridCellStyle1}" x:Name="previousVisitsDataGrid" Style="{DynamicResource DataGridStyle1}">
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="#" IsReadOnly="True" CanUserResize="False" Width="15*" Binding="{Binding RecordID}"/>
                                    <DataGridTextColumn Header="Date" Binding="{Binding Date}" IsReadOnly="True" Width="25*"/>
                                    <DataGridTextColumn Header="Reason" Binding="{Binding Reason}" IsReadOnly="True" Width="30*"/>
                                    <DataGridTextColumn Header="Description" Binding="{Binding DoctorNotes}" IsReadOnly="True" Width="40*"/>
                                    <DataGridTemplateColumn Header="" IsReadOnly="True" Width="auto">
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <StackPanel Orientation="Horizontal">
                                                    <Button Name="view" Style="{StaticResource gridEditButton}" Click="viewVisitClick">
                                                        <Icon:PackIconMaterial Kind="EyeCircleOutline" Style="{StaticResource gridButtonIcon}"/>
                                                    </Button>
                                                    <!--<Button Margin="5 0 0 0" Style="{StaticResource gridRemoveButton}">
                    <Icon:PackIconMaterial Kind="DeleteOutline" Style="{StaticResource gridButtonIcon}"/>
                </Button>-->
                                                </StackPanel>
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                    </DataGridTemplateColumn>
                                </DataGrid.Columns>
                            </DataGrid>


                        </Border>


                    </Grid>
                </Border>
                <!--bottom section-->
                <Grid Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="35*"/>
                        <ColumnDefinition Width="35*"/>
                        <ColumnDefinition Width="30*"/>
                    </Grid.ColumnDefinitions>
                    <!--medical records-->
                    <Border Grid.Column="0" Grid.Row="2" Style="{StaticResource theBorder}" Background="{StaticResource darkerColor}">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="50"/>
                                <RowDefinition Height="80*"/>
                            </Grid.RowDefinitions>
                            <Grid Grid.Row="0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="90*"/>
                                    <ColumnDefinition Width="15*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="Medical records" FontSize="20" FontWeight="Bold" Foreground="{StaticResource lightFontColor}" Margin="20 10" Grid.Column="0"/>
                                <Icon:PackIconMaterial MouseDown="newMedicalRecord" Kind="PlusBox" Foreground="{StaticResource lightFontColor}" Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Center" Width="25" Height="25"/>
                            </Grid>

                            <Border Grid.Column="1" Background="{StaticResource lighterColor}" Grid.Row="1" CornerRadius="10" Margin="10 0 10 10">
                                <DataGrid RowStyle="{DynamicResource DataGridRowStyle1}" ColumnHeaderStyle="{DynamicResource DataGridColumnHeaderStyle1}" CellStyle="{DynamicResource DataGridCellStyle1}" x:Name="medicalRecordsDataGrid" Style="{DynamicResource DataGridStyle1}">
                                    <DataGrid.Columns>
                                        <DataGridTextColumn Header="#" IsReadOnly="True" CanUserResize="False" Width="15*" Binding="{Binding RecordID}"/>
                                        <DataGridTextColumn Header="Type" Binding="{Binding Type}" IsReadOnly="True" Width="25*"/>
                                        <DataGridTextColumn Header="Date" Binding="{Binding RecordDate}" IsReadOnly="True" Width="30*"/>
                                        <DataGridTextColumn Header="Description" Binding="{Binding Age}" IsReadOnly="True" Width="40*"/>
                                        <DataGridTemplateColumn Header="" IsReadOnly="True" Width="auto">
                                            <DataGridTemplateColumn.CellTemplate>
                                                <DataTemplate>
                                                    <StackPanel Orientation="Horizontal">
                                                        <Button Name="view" Style="{StaticResource gridEditButton}" Click="viewRecord_Click">
                                                            <Icon:PackIconMaterial Kind="EyeCircleOutline" Style="{StaticResource gridButtonIcon}"/>
                                                        </Button>
                                                        <!--<Button Margin="5 0 0 0" Style="{StaticResource gridRemoveButton}">
                    <Icon:PackIconMaterial Kind="DeleteOutline" Style="{StaticResource gridButtonIcon}"/>
                </Button>-->
                                                    </StackPanel>
                                                </DataTemplate>
                                            </DataGridTemplateColumn.CellTemplate>
                                        </DataGridTemplateColumn>
                                    </DataGrid.Columns>
                                </DataGrid>


                            </Border>


                        </Grid>
                    </Border>
                    <!--active treatment plan-->
                    <Border Grid.Column="1" Style="{StaticResource theBorder}" Background="{StaticResource darkerColor}">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="20*"/>
                                <RowDefinition Height="80*"/>
                            </Grid.RowDefinitions>
                            <Grid Grid.Row="0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="90*"/>
                                    <ColumnDefinition Width="15*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="Active treatment plan" FontSize="20" Foreground="{StaticResource lightFontColor}" FontWeight="Bold" Margin="20 10" Grid.Column="0"/>
                                <Icon:PackIconMaterial Kind="ClipboardEdit" Foreground="{StaticResource lightFontColor}" Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Center" Width="25" Height="25"/>
                            </Grid>

                            <Border Grid.Column="1" Background="{StaticResource lighterColor}" Grid.Row="1" CornerRadius="10" Margin="10 0 10 10">
                                <StackPanel Name="StackPanel" Orientation="Vertical" Grid.Row="2" Background="Transparent" Margin="7" >
                                    <Border Background="{StaticResource selectedColor}" CornerRadius="10" Margin="10 10 10 0" Height="60"/>

                                </StackPanel>

                            </Border>
                        </Grid>
                    </Border>
                    <!--chief complaint-->
                    <Border Grid.Column="2" Style="{StaticResource theBorder}">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="20*"/>
                                <RowDefinition Height="80*"/>
                            </Grid.RowDefinitions>
                            <Grid Grid.Row="0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="90*"/>
                                    <ColumnDefinition Width="15*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="Notes" FontSize="20" Foreground="{StaticResource lightFontColor}" FontWeight="Bold" Margin="20 10" Grid.Column="0"/>
                                <Icon:PackIconMaterial Kind="ClipboardEdit" Foreground="{StaticResource lightFontColor}" Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Center" Width="25" MouseDown="enableNotes" Height="25"/>
                            </Grid>

                            <Border Grid.Column="1" Background="{StaticResource lighterColor}" Grid.Row="1" CornerRadius="10" Margin="10 0 10 10">
                                <TextBox Name="noteTXT" Margin="5" BorderThickness="0" IsEnabled="False" Background="Transparent" Foreground="{StaticResource lightFontColor}"></TextBox>
                            </Border>
                        </Grid>
                    </Border>

                </Grid>




                <!--Main Middle Chart Section-->
                <Border Grid.ColumnSpan="1" CornerRadius="20" Margin="10,0,10,10" Grid.RowSpan="1" Grid.Row="1" Background="{StaticResource lighterColor}">

                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="auto"/>
                        </Grid.RowDefinitions>

                        <Border Background="{StaticResource darkerColor}" BorderThickness="2" BorderBrush="{StaticResource selectedColor}"
                    CornerRadius="20" Margin="0 0 0 -10"/>


                        <!--Titles-->
                        <TextBlock Text="Patient Progress" Foreground="{StaticResource lightFontColor}" FontSize="18" FontWeight="SemiBold" Margin="35 25 0 0"/>
                        <TextBlock Text="Monthly" Foreground="{StaticResource lightFontColor}" FontSize="16" FontWeight="SemiBold" Margin="0 27 35 0" HorizontalAlignment="Right"/>


                        <!--Main Chart-->
                        <lvc:CartesianChart LegendLocation="None" Margin="10">
                            <lvc:CartesianChart.ToolTip>
                                <lvc:DefaultTooltip Background="{StaticResource darkerColor}" Foreground="{StaticResource lightFontColor}" BulletSize="0"/>
                            </lvc:CartesianChart.ToolTip>

                            <!--X Axis-->
                            <lvc:CartesianChart.AxisX>
                                <lvc:Axis Foreground="{StaticResource lighterColor}" FontSize="14" ShowLabels="True" Labels="Jan,Feb,Mar,Apr,May,Jun,Jul,Aug,Sep,Oct,Nov,Dec">
                                    <lvc:Axis.Separator>
                                        <lvc:Separator StrokeThickness="0" Step="1"/>
                                    </lvc:Axis.Separator>
                                </lvc:Axis>
                            </lvc:CartesianChart.AxisX>

                            <!--Y Axis-->
                            <lvc:CartesianChart.AxisY>
                                <lvc:Axis ShowLabels="False" MinValue="0" MaxValue="170">
                                    <lvc:Axis.Separator>
                                        <lvc:Separator StrokeThickness="0"/>
                                    </lvc:Axis.Separator>
                                </lvc:Axis>
                            </lvc:CartesianChart.AxisY>

                            <lvc:CartesianChart.Series>
                                <lvc:LineSeries Fill="{StaticResource lighterColor}" StrokeThickness="4" PointGeometrySize="0" Values="10,15,100,10,100,10,50,30,110,20,70,10">
                                    <lvc:LineSeries.Stroke>
                                        <LinearGradientBrush>
                                            <GradientStop Color="Transparent" Offset="0"/>
                                            <GradientStop Color="DimGray" Offset="0.23"/>
                                            <GradientStop Color="Transparent" Offset="2.5"/>
                                        </LinearGradientBrush>
                                    </lvc:LineSeries.Stroke>
                                </lvc:LineSeries>
                            </lvc:CartesianChart.Series>


                        </lvc:CartesianChart>
                        <Grid Grid.Row="1" Margin="10 20 10 15">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <!--Text Info Cards-->
                            <!--uc:TextInfo TextTop="Total Time" TextMiddle="748 Hr" TextBottom="April" IsActive="False"/-->
                            <!--uc:TextInfo TextTop="Total Steps" TextMiddle="9.178 St" TextBottom="April" IsActive="True" Grid.Column="1"/-->
                            <!--uc:TextInfo TextTop="Target" TextMiddle="9200 St" TextBottom="April" IsActive="False" Grid.Column="2"/-->
                        </Grid>


                    </Grid>
                </Border>
            </Grid>
        </Grid>
    </Border>
</Page>
